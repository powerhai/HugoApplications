<Application x:Class="Sagua.Jingson.Shopper.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:valueConverts="clr-namespace:Sagua.Jinson.Shopper.ValueConverts">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/DictionaryHeaderLabel.xaml"/>
            </ResourceDictionary.MergedDictionaries> 
            
            <Style TargetType="{x:Type TextBlock}">
                 <Setter Property="VerticalAlignment" Value="Center"></Setter>
            </Style>
            <Style TargetType="{x:Type TextBox}">
                <Setter Property="VerticalAlignment" Value="Center"></Setter>
            </Style>
            
            <Style TargetType="{x:Type ComboBox}">
                <Setter Property="VerticalAlignment" Value="Center"></Setter>
            </Style>
            <valueConverts:Enum2StringConverter x:Key="Enum2StringConverter" />
        </ResourceDictionary>
      
    </Application.Resources>
</Application>
