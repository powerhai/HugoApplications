<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="Jingying.App.Core.SelectUserTypePage"
	Title="用户类型"
xmlns:controls="clr-namespace:Sagua.App.Controls;assembly=Sagua.App.Controls"
>
	<ContentPage.Content>
		 <StackLayout Padding="5" >
		 	 <controls:XTableView>
		 	 	<controls:XTableView.Root>
					<TableRoot Title="title" >
								<TableSection  >
									<ViewCell>
									<Grid HorizontalOptions="Fill" VerticalOptions="Center" RowSpacing="0" ColumnSpacing="0"  >
										 	<Grid.RowDefinitions>
									      		<RowDefinition Height="30" /> 	 	 
									    	</Grid.RowDefinitions>
											<Grid.ColumnDefinitions> 
									      		<ColumnDefinition Width="40" /> 
									      		<ColumnDefinition Width="*" /> 
									      		<ColumnDefinition Width="30" /> 
									    	</Grid.ColumnDefinitions>
									 		<Image Grid.Column="0"></Image>
											<Label Text="QQ登录" Grid.Column="1"></Label>
									</Grid>	
									</ViewCell>

									<ViewCell>
									<Grid HorizontalOptions="Fill"  VerticalOptions="Center"  RowSpacing="0" ColumnSpacing="0">
										 	<Grid.RowDefinitions>
									      		<RowDefinition Height="30" /> 	 	 
									    	</Grid.RowDefinitions>
											<Grid.ColumnDefinitions> 
									      		<ColumnDefinition Width="40" /> 
									      		<ColumnDefinition Width="*" /> 
									      		<ColumnDefinition Width="30" /> 
									    	</Grid.ColumnDefinitions>
									 		<Image Grid.Column="0"></Image>
											<Label Text="微博登录" Grid.Column="1"></Label>
									</Grid>	
									</ViewCell>
								</TableSection>
					</TableRoot>
		 	 	</controls:XTableView.Root>
		 	 </controls:XTableView>


		 		
		 
		 		
		 	 
		 </StackLayout>
	</ContentPage.Content>
</ContentPage>
