<?xml version="1.0" encoding="UTF-8"?>
<ContentPage Padding="10" xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="Jingying.App.Core.MainPage"

>

<ContentPage.ToolbarItems>
	<ToolbarItem Name="ok" ></ToolbarItem>
	<ToolbarItem Name="no" ></ToolbarItem>
</ContentPage.ToolbarItems>

	<ContentPage.Content>
<Grid HorizontalOptions="Fill" RowSpacing="0" ColumnSpacing="0">
	 	<Grid.RowDefinitions>
      		<RowDefinition Height="30" /> 	 	
      		<RowDefinition Height="auto"  />
      		<RowDefinition Height="*" /> 
      		<RowDefinition Height="auto" /> 
    	</Grid.RowDefinitions>
		<Grid.ColumnDefinitions> 
      		<ColumnDefinition Width="*" /> 
      		<ColumnDefinition Width="0" /> 
    	</Grid.ColumnDefinitions>
		  <StackLayout  Grid.Row="1">
				<Image Source="logo_1.png"  WidthRequest="200"   ></Image>
				<Button Text="我是医生，我要找工作" Command="{Binding GoPersonHomeCommand}" HeightRequest="23" BackgroundColor="Silver"></Button>
				<Button Text="我是诊所，我要找精英" Command="{Binding GoClinicHomeCommand}"  HeightRequest="23"  BackgroundColor="Silver"></Button>
		  </StackLayout>

		  <Label Grid.Row="3"  Font="Small" Text="上海精诚软件有限公司" HorizontalOptions="Center"></Label>

			 
</Grid>



			
		

	</ContentPage.Content>
</ContentPage>
