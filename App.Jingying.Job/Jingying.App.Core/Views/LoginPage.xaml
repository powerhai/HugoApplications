<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="Jingying.App.Core.LoginPage"
	Title="用户类型"
xmlns:controls="clr-namespace:Sagua.App.Controls;assembly=Sagua.App.Controls"
	Padding="0,25,0,0" BackgroundColor="Silver" 
>
	<ContentPage.Content>
		 
		 	 <controls:XTableView>
		 	 	<controls:XTableView.Root>
					<TableRoot   >
								<TableSection >
									<controls:XViewCell  Command="{Binding LoginByQQCommand}">
									<Grid HorizontalOptions="Fill" VerticalOptions="Center" RowSpacing="0" ColumnSpacing="0"  >
										 	<Grid.RowDefinitions>
									      		<RowDefinition Height="20" /> 	 	 
									    	</Grid.RowDefinitions>
											<Grid.ColumnDefinitions> 
									      		<ColumnDefinition Width="10" /> 
									      		<ColumnDefinition Width="30" /> 
									      		<ColumnDefinition Width="20" /> 
									      		<ColumnDefinition Width="*" /> 
									      		<ColumnDefinition Width="30" /> 
									    	</Grid.ColumnDefinitions>
									 		<Image Grid.Column="1" Source="qq.jpg" ></Image>
											<Label Text="QQ登录" Grid.Column="3" VerticalOptions="Center" ></Label>
									</Grid>	
									</controls:XViewCell>

									<controls:XViewCell  Command="{Binding LoginByWeiboCommand}">
									<Grid HorizontalOptions="Fill"  VerticalOptions="Center"  RowSpacing="0" ColumnSpacing="0">
										 	<Grid.RowDefinitions>
									      		<RowDefinition Height="30" /> 	 	 
									    	</Grid.RowDefinitions>
											<Grid.ColumnDefinitions> 
									      		<ColumnDefinition Width="10" /> 
									      		<ColumnDefinition Width="30" /> 
									      		<ColumnDefinition Width="20" /> 
									      		<ColumnDefinition Width="*" /> 
									      		<ColumnDefinition Width="30" /> 
									    	</Grid.ColumnDefinitions>
									 		<Image Grid.Column="1" Source="weibo.jpg"></Image>
											<Label Text="微博登录" Grid.Column="3" VerticalOptions="Center" ></Label>
									</Grid>	
									</controls:XViewCell>
								</TableSection>
					</TableRoot>
		 	 	</controls:XTableView.Root>
		 	 </controls:XTableView>


		 		
		 
		 		 
	</ContentPage.Content>
</ContentPage>
